<%- if controller_name != 'sessions' %>
  <div class="mb-3">
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary" %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-3">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary" %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-3">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-primary" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <div class="container-fluid d-flex justify-content-between">
    <%- resource_class.omniauth_providers.each do |provider| %>

      <div class="row g-0 position-relative">
        <div class="container-fluid col-md-6 p-4 ps-md-0 p-0">
          <%= image_tag provider, class: "w-100" %>
          <%= link_to "", omniauth_authorize_path(resource_name, provider), method: :post, class: "stretched-link" %><br />
        </div>
      </div>
    <% end %>
  </div>
<% end %>
